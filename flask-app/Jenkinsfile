pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                dir('flask-app') {
                    sh 'docker build -t flask-devsecops-app .'
                }
            }
        }

        stage('Run Container') {
            steps {
                dir('flask-app') {
                    sh 'docker run -d -p 5000:5000 flask-devsecops-app'
                }
            }
        }
    }
}
