pipeline {
    agent any

    stages {
        stage('Clone Code') {
            steps {
                dir('flask-app') {
                    git url: 'https://github.com/Sohan-malgaonkar/DevSecOps-Flask-Project'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('flask-app') {
                    sh 'docker build -t flask-devsecops-app .'
                }
            }
        }

        stage('Run Container') {
            steps {
                dir('flask-app') {
                    sh 'docker run -d -p 5000:5000 flask-devsecops-app'
                }
            }
        }
    }
}
